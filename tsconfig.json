{
    "compilerOptions": {
      "esModuleInterop": true,      // Ensure compatibility with CommonJS and ES modules
      "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
      "lib": ["ES2020"],             // Ensure you're using modern libraries
      "module": "CommonJS",          // Use CommonJS for Node.js modules
      "moduleResolution": "node",    // Ensure Node.js module resolution
      "skipLibCheck": true,          // Skip library checking
      "strict": true,                // Enable strict type-checking options
      "target": "ES2020",  // Use ES2020 or later to support modern JavaScript features
    },
  }